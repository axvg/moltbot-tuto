# Moltbot Environment Configuration
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# ============================================
# REQUIRED: Telegram Bot
# ============================================

# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Get your user ID from @userinfobot on Telegram
YOUR_TELEGRAM_USER_ID=123456789

# ============================================
# REQUIRED: AI Provider (Choose ONE)
# ============================================

# Option 1: Anthropic Claude (Recommended for coding)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Option 2: OpenAI
# OPENAI_API_KEY=your_openai_api_key_here

# Option 3: Google Gemini
# GEMINI_API_KEY=your_gemini_api_key_here

# ============================================
# OPTIONAL: Additional Services
# ============================================

# GitHub Integration (for repo management)
GITHUB_TOKEN=your_github_personal_access_token

# Gateway Web Interface (set a secure random token)
GATEWAY_AUTH_TOKEN=your_secure_random_token_here

# Zapier MCP (for 8000+ app integrations)
ZAPIER_MCP_TOKEN=your_zapier_mcp_token_here

# Brave Search API (for web research)
BRAVE_API_KEY=your_brave_search_api_key_here

# ============================================
# OPTIONAL: Email Notifications
# ============================================

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password

# ============================================
# SYSTEM PATHS (Usually don't change these)
# ============================================

MOLTBOT_HOME=/home/moltbot
MOLTBOT_CONFIG=/etc/moltbot
MOLTBOT_LOGS=/var/log/moltbot
MOLTBOT_DATA=/home/moltbot/data

# ============================================
# SECURITY
# ============================================

# Set to 'true' in production
MOLTBOT_PRODUCTION=false

# Enable stricter security mode
MOLTBOT_STRICT_MODE=true
